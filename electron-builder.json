{
    "appId": "com.mugambabruno.zikapp",
    "productName": "Ziki",
    "copyright": "COPYRIGHT MUGAMBA BRUNO",
    "directories": {
        "app": "./",
        "output": "dist",
        "buildResources": "/images"
    },
    "files": [
        "./package.json",
       "./main.js",
        "./node_modules",
        "./tools", 
        "./ZPlayer.html",
        "./renderer.js",
        "./preload.js",
         "./lyrics.js",
         "./Core",
          "./Designs",
        "./images"
    ],
   
    "dmg": {
        "backgroundColor": "#080808",
        "window": {
            "width": "750",
            "height": "500"
        },
        "contents": [
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "mac": {
        "target": "dmg",
        "category": "public.app-category.utilities",
      },
    "win": {
        "target": "nsis",
         "icon": "./dist/.icon-ico/icon.ico",
    },
    "linux": {
        "target":["deb","snap"],
        "icon":"./images/zik.png"
    }
}
